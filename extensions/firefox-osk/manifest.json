{
    "manifest_version": 3,
    "name": "Kiosk OSK (KZ/RU/EN)",
    "version": "1.0.1",
    "description": "A minimal, Android-like on-screen keyboard for Firefox Kiosk with KZ, RU, and EN support.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.js"
            ],
            "css": [
                "styles/keyboard.css"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "src/background.js"
        ]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "osk@kiosk.local",
            "strict_min_version": "109.0"
        }
    }
}